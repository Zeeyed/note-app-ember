<div class="col-lg-6">
  <h1>Emails List
  	<span class="badge badge-primary badge-pill">{{content.length}}</span>
  </h1>
  {{email-filter resetFilter='doFilter' filterAction='filterItem'}}
  {{name-filter filterAction='filterItem'}}
  {{email-toggle-filter filterAction='useBoth'}}
  {{reset-button resetAction='resetFilter'}}
  <div class="list-group">
    {{#each filteredContent as |email|}}
      {{email-list/item
        content=email
        deleteAction="deleteItem"
        updateAction="updateItem"
      }}
    {{/each}}
  </div>
</div>
